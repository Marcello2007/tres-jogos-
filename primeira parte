int somV() {
    Beep(1200, 50);
    Beep(1000, 50);
    Beep(1200, 50);
    Beep(1000, 50);
    Beep(1200, 300);
}

int somD() {
    Beep(300, 450);
    Beep(200, 450);
    Beep(150, 1000);
}
